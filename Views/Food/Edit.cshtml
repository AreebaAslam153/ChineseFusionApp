@model ChineseFusionApp.Models.FoodItem
@using ChineseFusionApp.Models

@{
    var categories = ViewBag.Categories as List<Category>;
}

<div class="container mt-5">
    <h3>Edit Food Item</h3>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Food Name</label>
            <input asp-for="Name" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Category</label>
            <select asp-for="Category" class="form-control" required>
                @foreach (var c in categories)
                {
                    <option value="@c.Name" selected="@(c.Name == Model.Category)">
                        @c.Name
                    </option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label>Price (Rs)</label>
            <input asp-for="Price" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Change Image (optional)</label><br />
            <img src="@Model.ImageUrl" width="120" class="mb-2" />
            <input type="file" name="imageFile" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a href="/Food/Index" class="btn btn-secondary">Back</a>
    </form>
</div>
