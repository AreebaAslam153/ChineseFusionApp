@{
    var title = ViewData["Title"] ?? "Chinese Fusion";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <img src="~/images/logo.jpeg" alt="Logo" width="40" height="40" class="me-2 rounded-circle" />
            <a class="navbar-brand" href="/">Chinese Delight</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (Context.Session.GetString("UserEmail") == null)
                    {
                        <!-- 👇 Show these only if user NOT logged in -->
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Auth/Login">Login</a>
                        </li>
                    }
                    else
                    {
                        <!-- 👇 Show these only AFTER login -->
                        <li class="nav-item"><a class="nav-link" href="/Home/Dashboard">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Food/Index">Manage-Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Order/Index">Order Details</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Customer/Index">Customers</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Cart/Index">Cart</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Reviews/Index">Reviews</a></li> 
                        @* <li class="nav-item"><a class="nav-link" href="/FoodDetails/Index">Food Details</a></li> *@
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Auth/Logout">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>


    <main class="container py-4">
        @RenderBody()
    </main>

    <footer class="mt-auto bg-light text-center py-3">
        <div class="container">
            <small>&copy; @DateTime.Now.Year Chinese Delight</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
