@model IEnumerable<ChineseFusionApp.Models.Customer>

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Registered Customers</h2>

    <table class="table table-bordered table-striped text-center shadow">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Email</th>
                <th>Registered At</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Phone</td>
                        <td>@user.Address</td>
                        <td>@user.Email</td>
                        <td>@user.CreatedAt</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5">No customers found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
