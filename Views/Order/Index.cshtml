@model IEnumerable<ChineseFusionApp.Controllers.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Manage Orders</h2>

    <table class="table table-bordered table-striped text-center shadow">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer</th>
                <th>Food Item</th>
                <th>Quantity</th>
                <th>Total Price (PKR)</th>
                <th>Status</th>
                <th>Order Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerName</td>
                        <td>@order.FoodItem</td>
                        <td>@order.Quantity</td>
                        <td>@order.TotalPrice</td>
                        <td>
                            <form method="post" asp-action="UpdateStatus" asp-controller="Order">
                                <input type="hidden" name="id" value="@order.Id" />
                                <select name="status" class="form-select form-select-sm w-auto d-inline">
                                    <option value="Pending" selected="@("Pending" == order.Status)">Pending</option>
                                    <option value="In Progress" selected="@("In Progress" == order.Status)">In Progress</option>
                                    <option value="Delivered" selected="@("Delivered" == order.Status)">Delivered</option>
                                </select>
                                <button type="submit" class="btn btn-sm btn-primary">Update</button>
                            </form>
                        </td>
                        <td>@order.OrderDate</td>
                        <td><button class="btn btn-danger btn-sm">Delete</button></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="8">No orders found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
