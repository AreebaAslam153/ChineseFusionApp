@model IEnumerable<ChineseFusionApp.Models.OrderViewModel>

<div class="container mt-5">
    <h2 class="text-center mb-4">Customer Orders</h2>

    <table class="table table-bordered shadow">
        <thead class="table-dark">
            <tr>
                <th>Customer</th>
                <th>Email</th>
                <th>Items</th>
                <th>Total (Rs)</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.CustomerEmail</td>

                    <td>
                        @foreach (var item in order.Items)
                        {
                            <div class="d-flex align-items-center mb-2">
                                <img src="@item.ImageUrl" width="80" />
                                     style="object-fit:cover;border-radius:5px" />
                                <span class="ms-2">
                                    @item.Name × @item.Quantity
                                </span>
                            </div>
                        }
                    </td>

                    <td>@order.TotalAmount</td>

                    <td>
                        <span class="badge bg-warning">@order.Status</span>
                    </td>

                    <td>
                        <a href="/Order/UpdateStatus?id=@order.OrderId&status=Accepted"
                           class="btn btn-success btn-sm">Accept</a>

                        <a href="/Order/UpdateStatus?id=@order.OrderId&status=Delivered"
                           class="btn btn-primary btn-sm">Delivered</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
